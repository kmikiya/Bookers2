<div>
<h2>Books</h2>

<table>
  <thead>
    <tr>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td> <!--blogモデル内のtitleカラムという意味-->
      <td><%= book.opinion %></td>
<% end %>
    </tr>
  </tbody>
</table>
</div>

<div>
  <h2>User info</h2>
   <table>
       <tbody>
         <tr>
            <td>name</td>
            <td></td>
         </tr>
         <tr>
            <td>introduction</td>
            <td></td>
         </tr>
       </tbody>
   </table>

  <h2>New book</h2>
  <div>
<%= form_with model:@book, url: books_path, local:true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion %>
  <%= f.text_area :opinion %>
  </div>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
</div>
<% end %>